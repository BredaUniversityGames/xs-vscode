{
  "name": "xs-vscode",
  "displayName": "xs-vscode",
  "description": "Asset preview and tools for the xs game engine",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:project.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xs-vscode.runEngine",
        "title": "xs: run engine"
      },
      {
        "command": "xs-vscode.packageGame",
        "title": "xs: package game"
      },
      {
        "command": "xs-vscode.packageAndRun",
        "title": "xs: package and run"
      }
    ],
    "languages": [
      {
        "id": "xs-archive",
        "extensions": [".xs"],
        "aliases": ["xs archive"],
        "icon": {
          "light": "./media/icons/xs-file.svg",
          "dark": "./media/icons/xs-file.svg"
        }
      },
      {
        "id": "xs-animation",
        "extensions": [".xsanim"],
        "aliases": ["xs animation"],
        "icon": {
          "light": "./media/icons/xsanim-file.svg",
          "dark": "./media/icons/xsanim-file.svg"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "xs.archiveViewer",
        "displayName": "XS Archive Viewer",
        "selector": [
          {
            "filenamePattern": "*.xs"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
    "title": "xs engine",
    "properties": {
      "xs.enginePath": {
        "type": "string",
        "default": "",
        "description": "Path to xs.exe executable (e.g., C:\\path\\to\\xs.exe)"
      },
      "xs.workingDirectory": {
        "type": "string",
        "default": "${workspaceFolder}",
        "description": "Working directory when running the engine (use ${workspaceFolder} for current workspace)"
      }
    }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
